<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns		= "http://www.w3.org/ns/widgets"
	xmlns:gap	= "http://phonegap.com/ns/1.0"
	id		= "com.obrien.app"
	version 	= "1.1.1">

	<preference name="phonegap-version" value="1.9.0" />

	<name>O'Brien Pharmacy</name>

	<description>
		O'Brien Pharmacy allows you to order your prescriptions and get information straight from the source with this App!
	</description>

	<author href="http://prolificmarketing.org"
		email="andrew@prolificmarketing.org">
		Andrew Butler
	</author>

	<icon src="icon.png" gap:role="default" />
	<!--change this shit-->
<icon src="icons/bb/icon.png" gap:platform="blackberry" />
<icon src="icons/bb/icon_hover.png" gap:platform="blackberry" gap:state="hover"/>
<icon src="icons/apple/iphone.png" width="57" height="57" />
<icon src="icons/apple/ipad.png" gap:platform="ios" width="72" height="72" />
<icon src="icons/winphone/icon.png" gap:platform="winphone" />
<icon src="icons/winohone/tile.png" gap:platform="winphone" gap:role="background" />
<gap:splash src="splash.png" />


	<feature name="http://api.phonegap.com/1.0/geolocation"/>
	<feature name="http://api.phonegap.com/1.0/network"/>
	<preference name="fullscreen" value="true" />

</widget>
